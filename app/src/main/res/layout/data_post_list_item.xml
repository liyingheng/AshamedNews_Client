<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/general_margin"
    android:paddingBottom="@dimen/general_margin"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hot_item_avatar"
        android:layout_width="@dimen/avatar_height"
        android:layout_height="@dimen/avatar_width"
        android:layout_marginLeft="@dimen/avatar_margin_left"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mainContent_margin_left"
        android:layout_marginRight="@dimen/general_margin">

        <TextView
            android:id="@+id/hot_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paul Lee"
            android:textSize="@dimen/Body_Medium_textSize"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/hot_item_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_toRightOf="@id/hot_item_nickname"
            android:text="\@paul"
            android:textSize="@dimen/Body_Regular_textSize"
            android:textColor="@color/text_light_grey"
            android:fontFamily="sans-serif-light"
            />

        <TextView
            android:id="@+id/hot_item_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Yesterday"
            android:textSize="@dimen/Body_Regular_textSize"
            android:textColor="@color/text_light_grey"
            />

        <TextView
            android:id="@+id/hot_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_item_nickname"
            android:fontFamily="sans-serif-light"
            android:text="汉武帝时期也有过禁枪的争论。丞相公孙弘认为：弓弩杀伤力大，应该禁。光禄大夫吾丘寿王则认为：亡命之徒本来就不怕死，官府禁止不了他们持弓弩，而良民为了自卫持弓弩反而获罪，结果长歹徒威风而夺走良民自卫的能力。禁枪令没通过。"
            />

        <ImageView
            android:id="@+id/hot_item_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/pic_maxDimension"
            android:maxWidth="@dimen/pic_maxDimension"
            android:layout_below="@id/hot_item_content"
            android:src="@drawable/default_content_pic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hot_item_pic">

            <LinearLayout
                android:id="@+id/hot_subLayout_like"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hot_vote_buttonHeight"
                android:gravity="center"
                android:background="@drawable/button_vote_enable"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hot_icon_like"
                    android:layout_width="@dimen/hot_icon_dimension"
                    android:layout_height="@dimen/hot_icon_dimension"
                    android:src="@drawable/icon_for_enable" />

                <TextView
                    android:id="@+id/hot_item_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/hot_IconText_margin"
                    android:text="9999" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hot_subLayout_dislike"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hot_vote_buttonHeight"
                android:layout_toRightOf="@id/hot_subLayout_like"
                android:layout_marginLeft="@dimen/hot_Icons_margin"
                android:gravity="center"
                android:background="@drawable/button_vote_enable"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hot_icon_dislike"
                    android:layout_width="@dimen/hot_icon_dimension"
                    android:layout_height="@dimen/hot_icon_dimension"
                    android:src="@drawable/icon_against_enable" />

                <TextView
                    android:id="@+id/hot_item_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/hot_IconText_margin"
                    android:text="2334" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hot_subLayout_more"
                android:layout_width="36dp"
                android:layout_height="@dimen/hot_vote_buttonHeight"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/button_vote_enable"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hot_icon_more"
                    android:layout_width="@dimen/hot_icon_dimension"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_fav_enable" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hot_subLayout_comment"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_toLeftOf="@id/hot_subLayout_more"
                android:layout_marginRight="@dimen/hot_Icons_margin"
                android:gravity="center"
                android:background="@drawable/button_comment"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hot_item_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6300" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>