<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paullee.liyingheng.ashamednews.fragment.HotTabFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        android:layout_below="@id/ToolBar_RelativeLayout">

        <TextView
            android:id="@+id/hot_dataEmpty_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/global_empty_data"
            android:textSize="15sp"
            android:layout_margin="16dp"
            android:visibility="gone"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/hot_RefreshLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <ListView
                android:id="@+id/hot_hotNews_ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </android.support.v4.widget.SwipeRefreshLayout>



    </LinearLayout>

</FrameLayout>
